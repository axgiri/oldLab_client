# ============================================
# Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# ============================================
# Database
# ============================================
DB_PASSWORD=1

# ============================================
# JWT Secrets
# ============================================
JWT_SECRET=123456789qwerty123456789qwerty123456789qwerty
REFRESH_TOKEN_SECRET=123456789qwerty123456789qwerty123456789qwerty

# ============================================
# MinIO Object Storage
# ============================================
MINIO_ACCESS_KEY=123456789qwerty123456789qwerty123456789qwerty
MINIO_SECRET_KEY=123456789qwerty123456789qwerty123456789qwerty

# ============================================
# Google OAuth (for production)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/login/oauth2/code/google

# ============================================
# Frontend
# ============================================
FRONTEND_REDIRECT_URL=https://yourdomain.com/oauth-success

# ============================================
# Docker Image Version
# ============================================
VERSION=latest
